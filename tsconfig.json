{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*", "test-*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}